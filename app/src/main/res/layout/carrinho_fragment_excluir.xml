<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Carrinho.ExcluirFragment">




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="208dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/style_bt_editar_perfil"
            android:backgroundTint="@color/vermelho1"
            android:layout_gravity="center"
            android:layout_marginBottom="30sp">



            <TextView
                android:id="@+id/nomeCarrinho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textStyle="bold|italic"

                />

            <TextView
                android:id="@+id/precoCarrinho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="70dp"

                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btVoltar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Voltar"
                    android:textColor="@color/white"
                    android:layout_marginTop="140dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="@color/black"/>

                <Button
                    android:id="@+id/btExcluir"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Excluir"
                    android:layout_marginTop="140dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="20dp"
                    android:backgroundTint="@color/vermelho2"/>
            </LinearLayout>


        </FrameLayout>

</FrameLayout>