<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cardapio.PasteisFragment"
    android:background="@color/vermelho1">

    <FrameLayout
        android:id="@+id/framePasteis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pasteis"
                android:textSize="40sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:background="@color/cinza"
                android:textStyle="bold|italic"
                android:fontFamily="@font/caladea"/>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:id="@+id/carne"
                        android:layout_width="match_parent"
                        android:layout_height="208dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/black">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/carne" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="135dp"
                            android:layout_marginTop="15dp"
                            android:text="Carne"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:textStyle="bold|italic"

                            />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="140dp"
                            android:layout_marginTop="55dp"
                            android:text="R$ 08,00"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="130dp"
                            android:layout_marginBottom="10dp"
                            android:text="Carne moída especial, ovo picado e azeitona."
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="italic" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/portuguesa"
                        android:layout_width="match_parent"
                        android:layout_height="208dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/black">

                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/portuguesa" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="135dp"
                            android:layout_marginTop="15dp"
                            android:text="Portuguesa"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:textStyle="bold|italic"

                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="140dp"
                            android:layout_marginTop="55dp"
                            android:text="R$ 09,00"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="130dp"
                            android:layout_marginBottom="10dp"
                            android:text="Calabresa, tomate, cebola, pimentão e muçarela."
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="italic" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/nordeste"
                        android:layout_width="match_parent"
                        android:layout_height="208dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/black">

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/nordeste" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="135dp"
                            android:layout_marginTop="15dp"
                            android:text="Do Nordeste"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:textStyle="bold|italic"

                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="140dp"
                            android:layout_marginTop="55dp"
                            android:text="R$ 09,00"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="130dp"
                            android:layout_marginBottom="10dp"
                            android:text="Carne seca desfiada, cebolinha verde, aipim cozido, tomate, cebola e muçarela"
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="italic" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/legumes"
                        android:layout_width="match_parent"
                        android:layout_height="208dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/black">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/legumes" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="135dp"
                            android:layout_marginTop="15dp"
                            android:text="Legumes"
                            android:textColor="@color/white"
                            android:textSize="30dp"
                            android:textStyle="bold|italic"

                            />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="140dp"
                            android:layout_marginTop="55dp"
                            android:text="R$ 08,00"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="130dp"
                            android:layout_marginBottom="10dp"
                            android:text="Tomate, palmito, ervilha, brócolis, milho e muçarela."
                            android:textColor="@color/white"
                            android:textSize="20dp"
                            android:textStyle="italic" />

                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/barraL"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/vermelho1">

                    </FrameLayout>

                </LinearLayout>
            </ScrollView>



        </LinearLayout>
    </FrameLayout>

</FrameLayout>