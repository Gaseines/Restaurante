<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vermelho1"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/menu_backgroud">

        //HOME PADRAO

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/style_borda_padrao"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/botaoCarrinho"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:layout_marginTop="5sp"
            android:layout_marginRight="60dp"
            android:background="@color/vermelho1"
            tools:ignore="SpeakableTextPresentCheck"
            android:src="@drawable/icone_carrinho" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/botaoPerfil"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:layout_marginTop="5sp"
            android:layout_marginRight="15dp"
            android:background="@color/vermelho1"
            tools:ignore="SpeakableTextPresentCheck"
            android:src="@drawable/icone_perfil" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/caladea"
            android:text="Restaurante"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:textStyle="bold|italic" />

        //HOME PADRÃO

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@drawable/style_borda_padrao">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/caladea"
            android:gravity="center"
            android:text="Restaurante"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/caladea"
            android:gravity="center"
            android:text="Telefone:
(47)99925-3040
"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="177dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="70dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/caladea"
            android:gravity="center"
            android:text="Email:
Restau@hotmail.com

"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/amarelo"


        >

    </FrameLayout>

    <HorizontalScrollView
        android:layout_width="408dp"
        android:layout_height="50dp"
        android:background="@color/vermelho1"
        android:fadeScrollbars="true">

        <LinearLayout
            android:layout_width="550dp"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lanches"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/style_scroll_botao"
                android:fontFamily="@font/caladea"
                android:gravity="center"
                android:text="Lanches"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/pasteis"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/style_scroll_botao"
                android:fontFamily="@font/caladea"
                android:gravity="center"
                android:text="Pasteis"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/sushi"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/style_scroll_botao"
                android:fontFamily="@font/caladea"
                android:gravity="center"
                android:text="Sushi"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp" />


            <TextView
                android:id="@+id/bebidas"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/style_scroll_botao"
                android:fontFamily="@font/caladea"
                android:gravity="center"
                android:text="Bebidas"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="30dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:background="@drawable/style_borda_padrao">

        <View
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:layout_marginTop="115dp"
            android:background="@color/black" />

        <View
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:layout_marginTop="175dp"
            android:background="@color/black" />

        <View
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:layout_marginTop="235dp"
            android:background="@color/black" />

        <View
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:layout_marginTop="295dp"
            android:background="@color/black" />

        <View
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:layout_marginTop="355dp"
            android:background="@color/black" />

        <View
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:layout_marginTop="415dp"
            android:background="@color/black" />

        <TextView
            android:id="@+id/horarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/caladea"
            android:gravity="center"
            android:text="Horários"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/segunda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/caladea"
            android:gravity="left"
            android:text="Segunda-feira: 09:00 a 20:00"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/terca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="130dp"
            android:fontFamily="@font/caladea"
            android:gravity="left"
            android:text="Terça-feira: Não trabalhamos"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/quarta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="190dp"
            android:fontFamily="@font/caladea"
            android:gravity="left"
            android:text="Quarta-feira: 09:00 a 20:00"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/quinta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="250dp"
            android:fontFamily="@font/caladea"
            android:gravity="left"
            android:text="Quinta-feira: 09:00 a 20:00"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/sexta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="310dp"
            android:fontFamily="@font/caladea"
            android:gravity="left"
            android:text="Sexta-feira: 09:00 a 20:00"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/sabado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="370dp"
            android:fontFamily="@font/caladea"
            android:gravity="left"
            android:text="Sábado: 09:00 a 13:00"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/domingo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="430dp"
            android:fontFamily="@font/caladea"
            android:gravity="left"
            android:text="Domingo: Não trabalhamos"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold|italic" />

    </FrameLayout>

</LinearLayout>




