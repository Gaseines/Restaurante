<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cardapio.LanchesFragment"
    android:background="@color/vermelho1">


    <FrameLayout
        android:id="@+id/frameLanches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lanches"
            android:textSize="40sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:background="@color/cinza"
            android:textStyle="bold|italic"
            android:fontFamily="@font/caladea"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/tradicional"
                    android:layout_width="match_parent"
                    android:layout_height="208dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/trad" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="135dp"
                        android:layout_marginTop="15dp"
                        android:text="Tradicional"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:textStyle="bold|italic"

                        />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="55dp"
                        android:text="R$ 27,00"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="130dp"
                        android:layout_marginBottom="10dp"
                        android:text="Pão, hambúrguer 180g, cheddar, alface, tomate, cebola e molho especial + fritas"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="italic" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/Tduplo"
                    android:layout_width="match_parent"
                    android:layout_height="208dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/duplo" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="135dp"
                        android:layout_marginTop="15dp"
                        android:text="Tradicional duplo"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:textStyle="bold|italic"

                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="55dp"
                        android:text="R$ 30,00"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="130dp"
                        android:layout_marginBottom="10dp"
                        android:text="Pão, 2 hambúrguer 180g, cheddar, alface, tomate, cebola e molho especial + fritas"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="italic" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/bacon"
                    android:layout_width="match_parent"
                    android:layout_height="208dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/bacon" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="135dp"
                        android:layout_marginTop="15dp"
                        android:text="Bacon"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:textStyle="bold|italic"

                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="55dp"
                        android:text="R$ 32,00"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="130dp"
                        android:layout_marginBottom="10dp"
                        android:text="Pão, hambúrguer 180g, cheddar, bacon, tomate, cebola e molho especial + fritas"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="italic" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/Alcatra"
                    android:layout_width="match_parent"
                    android:layout_height="208dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/black">

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/alcatra" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="135dp"
                        android:layout_marginTop="15dp"
                        android:text="Alcatra"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        android:textStyle="bold|italic"

                        />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="140dp"
                        android:layout_marginTop="55dp"
                        android:text="R$ 35,00"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="130dp"
                        android:layout_marginBottom="10dp"
                        android:text="Pão, alcatra, cheddar, rúcula, tomate seco e molho especial+ fritas"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="italic" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/barraL"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/vermelho1">

                </FrameLayout>

            </LinearLayout>
        </ScrollView>



    </LinearLayout>
    </FrameLayout>

</FrameLayout>